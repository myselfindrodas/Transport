<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvClientname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/futuracyrillicmedium"
                android:text="Client Name: John Deo"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_18ssp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/futuracyrillicmedium"
                android:text="Vehicle No: FG6893"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_16ssp" />


            <TextView
                android:id="@+id/tvIntime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/futuracyrillicmedium"
                android:text="Vehicle In-Time : 10:30 PM"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_45sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:background="@drawable/buttonyellow"
                    android:text="Submit"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/futuracyrillicheavy"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:background="@drawable/buttonyellow"
                    android:backgroundTint="@color/purple_700"
                    android:text="Cancel"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/futuracyrillicheavy"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>