<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primarycolor"
    tools:context=".ui.fragment.VerifiedFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">



    <ImageView
        android:id="@+id/imgtick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/tickverified" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/futuracyrillicbold"
        android:text="Vehicle has been \nverified."
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/_24ssp" />

    </LinearLayout>




        <LinearLayout
            android:id="@+id/llbottombutton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTakepic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/buttonyellow"
                android:backgroundTint="@color/purple_700"
                android:text="TAKE PHOTO"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/futuracyrillicheavy"
                android:textColor="@color/white" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUploadinfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/buttonyellow"
                android:text="UPLOAD INFO"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/futuracyrillicheavy"
                android:textColor="@color/black" />


        </LinearLayout>





</RelativeLayout>
</layout>