<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgIntime"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_10sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/noimage"/>




                <ImageView
                    android:id="@+id/imgOuttime"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/noimage"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuracyrillicmedium"
                    android:text="In Time Image"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_16ssp" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuracyrillicmedium"
                    android:text="Out Time Image"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_16ssp" />


            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:background="@drawable/gradientyellow"
                android:text="Ok"
                android:fontFamily="@font/futuracyrillicheavy"
                android:textColor="@color/black" />




        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>